	<!-- sign up -->
	<insert id = "signUp">
		insert into users (email, password, gender, date_of_birth)
		values ( #{email}, #{password}, #{gender}, #{date_of_birth})
	</insert>
	
	<!-- login -->
	<select id="login" resultType="String">
		select password from users where email = #{email}
	</select>


</mapper>